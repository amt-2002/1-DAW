package Ejercicio2;

import java.util.Scanner;

public class Ejercicio10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sca = new Scanner(System.in); 
		
		String cadena1;
		String cadena2; 
		Boolean comprobarCadenaVacia1;
		Boolean comprobarCadenaVacia2;
		Boolean comprobarCadenaEspacios1;
		Boolean comprobarCadenaEspacios2;
		Boolean repetimosBucle; 
		
		
		do {
			
			System.out.println("Indicame una palabra cualquiera");
			
			cadena1 = sca.nextLine(); 
			
			System.out.println("Indicame otra palabra cualquiera");
			
			cadena2 = sca.nextLine(); 
			
			comprobarCadenaVacia1 = cadena1.isEmpty(); 
			comprobarCadenaVacia2 = cadena2.isEmpty(); 
			comprobarCadenaEspacios1 = cadena1.isBlank(); 
			comprobarCadenaEspacios2 = cadena2.isBlank(); 
			
			
			if (comprobarCadenaVacia1 == true || comprobarCadenaVacia2 == true) {
				repetimosBucle = true; 
				
			}
			
		} while(repetimosBucle); 
		
		sca.close();

	}

}
