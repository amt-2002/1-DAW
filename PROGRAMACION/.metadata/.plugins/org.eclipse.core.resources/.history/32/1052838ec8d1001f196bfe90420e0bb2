package Tema4.EjercicosBasicos;

public class Ejercicio2 {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String palabra = "Hola Como EStas";
		String mayus = getMinusculas(palabra);
		System.out.println(mayus);
	}
	public static String getMinusculas(String palabra) {
		String mayuscula = palabra.toLowerCase();
		return mayuscula;
 
	}

}
