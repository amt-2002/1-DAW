package Tema4.Ej40;

import java.util.ArrayList;
import java.util.List;

public class PilaCola<E> {
	private List<E> datos;
	private String modoSeleccionado;
	
	
	public PilaCola() {
		this.modoSeleccionado = "cola";
		datos = new ArrayList<>();
	}
	
	public void añadirObjeto(List<E> lista) {
		datos.addAll(lista);
	}

	public String sacarObjeto() {
		return "ERROR";
	}

	public Integer getTamaño() {
		return datos.size();
	}

	@Override
	public String toString() {
		return "PilaCadenas [listPila = " + datos + "]";
	}

	public void setModoPila() {
		this.modoSeleccionado = "pila";
	}

	public void setModoCola() {
		this.modoSeleccionado = "cola";
	}

	
}
