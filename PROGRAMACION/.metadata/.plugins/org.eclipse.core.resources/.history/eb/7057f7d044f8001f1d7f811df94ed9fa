package Tema4.Ej2.Clases;

public class Telefono {

	private Integer nTelefono;
	private Boolean enLlamada;

	public Telefono(Integer tel) {
		super();
		this.nTelefono = tel;
		this.enLlamada = false;
	}

	public Boolean getEnLlamada() {
		return enLlamada;
	}

	public void setEnLlamada(Boolean enLlamada) {
		this.enLlamada = enLlamada;
	}
	
	public Integer consultarNumero() {
		return this.nTelefono;
	}
	
	public void marcar(Integer nTelefono) {
		System.out.println("LLAMANDO A " + nTelefono);
		if (this.nTelefono == nTelefono) {
			System.out.println("COMUNICANDO");
			return;
		}
		System.out.println("EN COMUNICACION");
		this.enLlamada = true;
	}
	
	public void colgar() {
		if (this.enLlamada) {
			System.out.println("COMUNICACION TERMINADA");
			this.enLlamada = false; 
		}
	}

}
